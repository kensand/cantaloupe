{
  "name": "cantaloupe",
  "version": "0.1.7",
  "private": false,
  "scripts": {
    "prettier": "npx prettier --write .",
    "bundle_esm": "esbuild dist/tsc-out/index.js --bundle --sourcemap --platform=browser --outdir=dist/esm",
    "bundle_cjs": "esbuild dist/tsc-out/index.js --bundle --sourcemap --platform=node --outdir=dist/cjs",
    "build": "npm run prettier && tsc && npm run bundle_esm && npm run bundle_cjs",
    "clean": "rm -rf dist",
    "update": "npm update --save && ((! git diff --exit-code package.json > /dev/null && git add package.json && git commit -m 'Dependency updates') || true)",
    "pub": "npm run clean && npm run build && npm version patch && npm publish"
  },
  "eslintConfig": {},
  "devDependencies": {
    "@types/node": "^18.15.0",
    "esbuild": "^0.17.11",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/cjs",
    "dist/esm",
    "dist/types"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "author": {
    "name": "Kenneth Sanders",
    "email": "npm@kensand.net"
  },
  "repository": {
    "url": "https://github.com/kensand/cantaloupe.git"
  },
  "description": "Typescript utilities",
  "license": "MIT"
}
